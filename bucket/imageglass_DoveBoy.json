{
    "version": "9.0.11.529",
    "description": "A lightweight, versatile image viewer",
    "homepage": "https://imageglass.org",
    "license": "GPL-3.0-only",
    "notes": "If this app doesn't work maybe you need to clean '$dir\\igconfig.json' and reinstall '$dir\\Themes'.",
    "architecture": {
        "64bit": {
            "url": "https://github.com/d2phap/ImageGlass/releases/download/9.0.11.529/ImageGlass_9.0.11.529_x64.zip",
            "hash": "0dcb18ad6cd04b9b7bd2e312b646d875aad667e912a5900bb4f4bf9833c8fac1",
            "extract_dir": "ImageGlass_9.0.11.529_x64"
        },
        "arm64": {
            "url": "https://github.com/d2phap/ImageGlass/releases/download/9.0.9.1230/ImageGlass_9.0.9.1230_arm64.zip",
            "hash": "f0ec35ac08bfbbcac52a107c1218ff05c46a534fabe4e21fe44cb74ffbf25ffd",
            "extract_dir": "ImageGlass_9.0.9.1230_arm64"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\igconfig.json\")) {",
        "    Add-Content \"$dir\\igconfig.json\" '{\"AutoUpdate\": \"0\"}' -Encoding utf8",
        "}"
    ],
    "bin": [
        "ImageGlass.exe",
        "igcmd.exe"
    ],
    "shortcuts": [
        [
            "ImageGlass.exe",
            "ImageGlass"
        ]
    ],
    "persist": [
        "Themes",
        "igconfig.json"
    ],
    "checkver": {
        "script": [
            "$url = 'https://api.github.com/repos/d2phap/ImageGlass/releases'",
            "$cont = (Invoke-WebRequest $url).Content",
            "$r = 'ImageGlass_([\\d.]+)_x64\\.' ",
            "if (!($cont -match $r)) { error \"Could not match $r in $url\"; continue }",
            "$version = $matches[1]",
            "$r = 'ImageGlass_([\\d.]+)_arm64\\.' ",
            "if (!($cont -match $r)) { error \"Could not match $r in $url\"; continue }",
            "$arm64 = $matches[1]",
            "Write-Output $version $arm64"
        ],
        "regex": "([\\d.]+) (?<arm64>[\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/d2phap/ImageGlass/releases/download/$version/ImageGlass_$version_x64.zip",
                "extract_dir": "ImageGlass_$version_x64"
            },
            "arm64": {
                "url": "https://github.com/d2phap/ImageGlass/releases/download/$matchArm64/ImageGlass_$matchArm64_arm64.zip",
                "extract_dir": "ImageGlass_$matchArm64_arm64"
            }
        }
    }
}
