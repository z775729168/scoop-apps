        "",
        "    $persist_dir\\autoload"
    ],
    "architecture": {
        "32bit": {
            "url": "https://dukeworld.com/eduke32/synthesis/20230811-10345-21bae1455/eduke32_win32_20230811-10345-21bae1455.7z",
            "hash": "0ed37327a67c7bb104a5adf5a639a275641d3424c81cb0ea712d0cadbd42ebc5"
