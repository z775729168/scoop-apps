        "64bit": {
            "url": "https://dukeworld.com/eduke32/synthesis/20230811-10345-21bae1455/eduke32_win64_20230811-10345-21bae1455.7z",
            "hash": "157439031f7f94a2013f4fdb73de5eb4c906af7615ba9978293eb2876a58fb49"
