 "uninstaller": {
  "script": [
   "if ($architecture -eq '64bit') {",
   "   sudo \"$env:COMSPEC\" /c \"regsvr32 /u /s \"$dir\\HashCheck64.dll\"\"",
   "}",
   "sudo \"$env:COMSPEC\" /c \"regsvr32 /u /s \"$dir\\HashCheck32.dll\"\""
  ]
