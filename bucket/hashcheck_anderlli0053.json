   "   sudo \"$env:COMSPEC\" /c \"regsvr32 /s \"$dir\\HashCheck64.dll\"\"",
   "}",
   "sudo \"$env:COMSPEC\" /c \"regsvr32 /s \"$dir\\HashCheck32.dll\"\"",
   "Remove-Item \"$dir\\`$PLUGINSDIR\" -Recurse -Force"
  ]
 },
