    "homepage": "https://copicseal.kohai.top/",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/copicseal/copicseal/releases/download/v0.3.3/copicseal-0.3.3-setup.exe#/dl.7z",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
            "hash": "sha512:e05a0a0e4d91f5fc85d2ade2b44b00691f6214b071ecc3016eb0454c7d9a8bc9776af1f1aea7ee9e5ef785ea95371177187497f2cadc981dbbbf541dfefa5b81"
