            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
            "hash": "sha512:74b96efc9315e6d2b67a5f28a71f30f32862675ef194ffd226544e376bdc3aac40dfbf961e211aca69b879906d78b6e919fe1c7fceabeb1de3c43fff7ef5cde2"
