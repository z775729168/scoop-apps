  "uninstaller": {
    "script": [
      "foreach ($file in Get-ChildItem -Path \"$dir\\plugins\" -Name) {",
      "    if ($file -eq \"milkman-rest.jar\") {",
      "        continue",
      "    }",
      "    Write-Host \"Removing hardlink for $file\"",
      "    Remove-Item \"$(appdir milkman $global)\\current\\plugins\\$file\" -Force",
      "}"
    ]
