{
    "version": "1.4.1.1022",
    "description": "Locate files and folders by name instantly.",
    "homepage": "https://www.voidtools.com",
    "license": "MIT",
    "notes": [
        "添加 Everything 到资源管理器右键菜单：",
        "[选项] / [集成到资源管理器右键菜单]"
    ],
    "architecture": {
        "64bit": {
            "url": "https://www.voidtools.com/Everything-1.4.1.1022.x64.zip",
            "hash": "c718bcd73d341e64c8cb47e97eb0c45d010fdcc45c2488d4a3a3c51acc775889"
        },
        "32bit": {
            "url": "https://www.voidtools.com/Everything-1.4.1.1022.x86.zip",
            "hash": "04661c7a2902e91878b8d714369cf5d7f7d52f79d4fb3fdfe8ce619641ab5793"
        }
    },
    "persist": [
        "Logs",
        "Bookmarks.csv",
        "Everything.ini",
        "Filters.csv",
        "Run History.csv",
        "Search History.csv"
    ],
    "pre_install": [
        "ensure \"$persist_dir\" | Out-Null",
        "'Bookmarks.csv', 'Everything.ini', 'Filters.csv', 'Run History.csv', 'Search History.csv' | ForEach-Object {",
        "  if (!(Test-Path \"$persist_dir\\$_\")) {",
        "    Add-Content \"$dir\\$_\" $null",
        "  }",
        "}"
    ],
    "pre_uninstall": [
        "Stop-Process -Name 'everything' -ErrorAction SilentlyContinue",
        "if (Get-Service 'Everything' -ErrorAction SilentlyContinue) {",
        "    if (!(is_admin)) { error 'Admin rights are required to stop Everything service'; break }",
        "    Stop-Service -Name 'Everything' -Force -ErrorAction SilentlyContinue | Out-Null",
        "    if ($cmd -eq 'uninstall') { sc.exe delete 'Everything' }",
        "}"
    ],
    "bin": "Everything.exe",
    "shortcuts": [
        [
            "Everything.exe",
            "Everything"
        ]
    ],
    "checkver": "Download Everything ([\\d.]+)",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.voidtools.com/Everything-$version.x64.zip"
            },
            "32bit": {
                "url": "https://www.voidtools.com/Everything-$version.x86.zip"
            }
        },
        "hash": {
            "url": "$baseurl/Everything-$version.sha256"
        }
    }
}
