        "    Copy-Item \"$env:UserProfile\\.atom\\*\" \"$dir\\.atom\" -Recurse",
        "}",
        "if (!(Test-Path \"$dir\\.atom\\electronUserData\")) {",
        "    New-Item -Type Directory \"$dir\\.atom\\electronUserData\" | Out-Null",
