    "notes": "Add gVim as a context menu option by running: \"$dir\\install-context.reg\"",
    "suggest": {
        "vimtutor": "vimtutor"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/vim/vim-win32-installer/releases/download/v8.2.4411/gvim_8.2.4411_x64.zip",
            "hash": "4ec3ff867a06f2465bb1cd3e008f55cc308768879ba85e42421618d18a533af1"
        },
        "32bit": {
