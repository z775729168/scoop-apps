{
    "version": "1.25.14",
    "description": "Terminal/ssh/serial port/sftp client",
    "homepage": "https://electerm.github.io/electerm/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/electerm/electerm/releases/download/v1.25.14/electerm-1.25.14-win-x64.tar.gz",
            "hash": "f0a5ceaa4158adb8c0801de0de09dc2b79e74d46cfef1ad2983a3884b78d8b98",
            "extract_dir": "electerm-1.25.14-win-x64"
        }
    },
    "bin": "electerm.exe",
    "installer": {
        "script": [
            "$runtimeCache = \"$env:APPDATA\\electerm\"",
            "$runtimeCachePersist = \"$persist_dir\\Cache\"",
            "if (Test-Path $runtimeCachePersist) {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "} else {",
            "    if (Test-Path $runtimeCache) {",
            "        Move-Item $runtimeCache $runtimeCachePersist -Force",
            "        New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "    }",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$runtimeCache = \"$env:APPDATA\\electerm\"",
            "$runtimeCachePersist = \"$persist_dir\\Cache\"",
            "if (!(Test-Path $runtimeCachePersist)) {",
            "    Move-Item $runtimeCache $runtimeCachePersist -Force",
            "} else {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "shortcuts": [["electerm.exe", "electerm"]],
    "checkver": {
        "github": "https://github.com/electerm/electerm"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/electerm/electerm/releases/download/v$version/electerm-$version-win-x64.tar.gz",
                "extract_dir": "electerm-$version-win-x64"
            }
        }
    }
}
