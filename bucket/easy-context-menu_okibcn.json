{
    "homepage": "https://www.sordum.org/7615/",
    "description": "Tool for adding various preset context menu options.",
    "license": "Freeware",
    "version": "1.6",
    "url": "https://www.sordum.org/files/easy-context-menu/ec_menu.zip",
    "installer": {
        "script": [
            "mv $dir\\*\\* $dir",
            "rm $dir\\EcMenu_v*"
        ]
    },
    "architecture": {
        "64bit": {
            "shortcuts": [
                ["EcMenu_x64.exe", "Easy Context Menu"]
            ]
        },
        "32bit": {
            "shortcuts": [
                ["EcMenu.exe", "Easy Context Menu"]
            ]
        }
    },
    "checkver": {
        "url": "https://www.sordum.org/7615/",
        "regex": "Easy Context Menu v([\\d.]+)"
    }
}
