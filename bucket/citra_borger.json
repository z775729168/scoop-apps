            "Citra"
        ]
    ],
    "persist": "user",
    "checkver": {
        "github": "https://github.com/citra-emu/citra-nightly",
        "regex": "download/nightly-(?<build>[\\d]+)/citra-windows-(?<env>[\\w]+)-(?<date>[\\d]+)-(?<commit>[\\da-f]{7})\\.(?<zip>7z|zip)",
        "replace": "${build}-${date}"
    },
    "autoupdate": {
