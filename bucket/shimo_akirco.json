{
    "version": "3.1.1",
    "description": "A notes app",
    "homepage": "https://shimo.im/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "hash": "f5969a5384271a4456f5c96ec3af4a8c7e321f532a31d7fcc4e49b1ca3fe296f",
            "url": "https://as.smvm.cn/panther/shimo/release/win32/x64/%E7%9F%B3%E5%A2%A8%E6%96%87%E6%A1%A3_v3.1.1-release.6d78b4a.shimo_win32-x64.exe#/dl.7z",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninst*\" -Force -Recurse"
            ]
        }
    },
    "installer": {
        "script": [
            "if (!(Test-Path \"$persist_dir\\data\")) {",
            "    New-Item \"$persist_dir\\data\" -Type Directory -Force | Out-Null",
            "}",
            "$runtimeCache = \"$env:APPDATA\\shimo\"",
            "$runtimeCachePersist = \"$persist_dir\\shimo\"",
            "if (Test-Path $runtimeCachePersist) {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "} else {",
            "    if (Test-Path $runtimeCache) {",
            "        Move-Item $runtimeCache $runtimeCachePersist -Force",
            "        New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "    }",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$runtimeCache = \"$env:APPDATA\\shimo\"",
            "$runtimeCachePersist = \"$persist_dir\\shimo\"",
            "if (!(Test-Path $runtimeCachePersist)) {",
            "    Move-Item $runtimeCache $runtimeCachePersist -Force",
            "} else {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "shortcuts": [["石墨文档.exe", "石墨文档"]],
    "persist": "data"
}
