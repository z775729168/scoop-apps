{
    "architecture": {
        "32bit": {
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-32.7z\" \"$dir\""
        },
        "64bit": {
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\""
        }
    },
    "autoupdate": {
        "hash": {
            "regex": "sha512:\\s*$base64",
            "url": "$baseurl/latest.yml"
        },
        "url": "https://download.remnote.io/RemNote%20Setup%20$version.exe#/dl.7z"
    },
    "bin": [
        [
            "RemNote.exe",
            "RemNote",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "changelog": "https://feedback.remnote.com/changelog",
    "checkver": {
        "regex": "version: ([\\d.]+)",
        "url": "https://download.remnote.io/latest.yml"
    },
    "description": "RemNote. The all-in-one tool for thinking and learning.",
    "hash": "sha512:8d366641d02511314cd65df4f1af7c6f954ed7d23e15fef957f43753cda924113f00e49fcc6b6a3cbd12d90e63eef0013d18bf3ed3e67aff5a1fe2b6e7dc775b",
    "homepage": "https://www.remnote.com/",
    "license": "Shareware",
    "persist": "User Data",
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall*\", \"$dir\\resources\\app-update.yml\"  -Force -Recurse",
    "shortcuts": [
        [
            "RemNote.exe",
            "RemNote",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "url": "https://download.remnote.io/RemNote%20Setup%201.8.40.exe#/dl.7z",
    "version": "1.8.40"
}
