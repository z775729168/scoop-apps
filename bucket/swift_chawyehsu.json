{
    "homepage": "https://www.swift.org/",
    "description": "The Swift Programming Language",
    "license": "Apache-2.0",
    "version": "5.9.2",
    "architecture": {
        "64bit": {
            "url": "https://download.swift.org/swift-5.9.2-release/windows10/swift-5.9.2-RELEASE/swift-5.9.2-RELEASE-windows10.exe",
            "hash": "d78a717551c78e824c9b74b0cfb1ad86060fc286ea071fddb26df18f56dc7212"
        }
    },
    "depends": "dorado/wix",
    "suggest": {
        "python": "main/python",
        "vcredist": "extras/vcredist2022"
    },
    "installer": {
        "script": [
            "wix.exe burn extract \"$dir\\$fname\" -o \"$dir\\extracted\" -oba \"$dir\\extracted\"",
            "Get-ChildItem \"$dir\\extracted\\WixAttachedContainer\\*.msi\" | ForEach-Object {",
            "    Expand-MsiArchive $_ \"$dir\"",
            "}",
            "Get-ChildItem \"$dir\\PFiles64\" | Copy-Item -Destination \"$dir\\Library\\Developer\\Runtimes\" -Force -Recurse",
            "Remove-Item \"$dir\\$fname\",\"$dir\\extracted\",\"$dir\\PFiles64\" -Recurse | Out-Null"
        ]
    },
    "env_add_path": [
        "Library\\Developer\\Toolchains\\unknown-Asserts-development.xctoolchain\\usr\\bin",
        "Library\\Developer\\Runtimes\\runtime-development\\usr\\bin"
    ],
    "env_set": {
        "SDKROOT": "$dir\\Library\\Developer\\Platforms\\Windows.platform\\Developer\\SDKs\\Windows.sdk",
        "DEVELOPER_DIR": "$dir\\Library\\Developer\\Platforms\\Windows.platform\\Developer"
    },
    "checkver": {
        "url": "https://dorado-api.deno.dev/swift-tmp",
        "regex": "swift-(5.9[\\d.]+)-RELEASE-windows10.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.swift.org/swift-$version-release/windows10/swift-$version-RELEASE/swift-$version-RELEASE-windows10.exe"
            }
        }
    }
}
