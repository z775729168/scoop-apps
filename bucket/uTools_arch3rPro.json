{
    "homepage": "https://u.tools/",
    "description": "新一代效率工具平台.(Scoop bucket by arch3rpro)",
    "license": "Unknown",
    "version": "4.3.2",
    "architecture": {
        "64bit": {
            "url": "https://publish.u-tools.cn/version2/uTools-4.3.2.exe#/dl.7z",
            "hash": "127403d254be809d3bd43ff44cc789b05fdd22927761b3563dee5341960a1f5a",
            "installer": {
                "script": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\""
            }
        },
        "32bit": {
            "url": "https://publish.u-tools.cn/version2/uTools-4.3.2-ia32.exe#/dl.7z",
            "hash": "fca18a90546c3ff32c74869ddb28101e2d12a1f839f2ba4e26e68c045d44efe0",
            "installer": {
                "script": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-32.7z\" \"$dir\""
            }
        }
    },
    "post_install": [
        "Remove-Item -Recurse -Force \"$dir\\`$PLUGINSDIR\"",
        "$runtimeCache = \"$env:APPDATA\\uTools\"",
        "$runtimeCachePersist = \"$persist_dir\\data\"",
        "if (Test-Path $runtimeCachePersist) {",
        "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
        "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
        "} else {",
        "    if (Test-Path $runtimeCache) {",
        "        Move-Item $runtimeCache $runtimeCachePersist -Force",
        "        New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
        "    }",
        "}"
    ],
    "uninstaller": {
        "script": [
            "$runtimeCache = \"$env:APPDATA\\uTools\"",
            "$runtimeCachePersist = \"$persist_dir\\data\"",
            "if (!(Test-Path $runtimeCachePersist)) {",
            "    Move-Item $runtimeCache $runtimeCachePersist -Force",
            "} else {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "shortcuts": [
        [
            "uTools.exe",
            "uTools"
        ]
    ],
    "persist": "data",
    "checkver": {
        "url": "https://u.tools/",
        "regex": "uTools-([\\d.]+)\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://publish.u-tools.cn/version2/uTools-$version.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://publish.u-tools.cn/version2/uTools-$version-ia32.exe#/dl.7z"
            }
        }
    }
}
